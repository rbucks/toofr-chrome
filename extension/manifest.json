{
  "manifest_version": 2,
  "name": "Toofr Helper",
  "short_name": "Toofr Helper",
  "description": "Another way to use Toofr",
  "version": "0.8",
  "icons": {
    "128": "img/icon128.png"
  },

  "background": {
    "scripts": [
      "lib/jquery-2.1.1.min.js",
      "js/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/profile/*",
        "*://*.linkedin.com/in/*"
      ],
      "js": ["js/content-script.js"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_title": "",
    "default_popup": "html/popup.html"
  },

  "options_page": "html/options.html",

  "permissions": [
    "http://toofr.com/*"
  ]
}
